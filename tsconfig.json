{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2016"],
    "outDir": "bin",
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "node",
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}